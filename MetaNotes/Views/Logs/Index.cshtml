@model LogsIndexModel
@using MetaNotes.Internationalization.UI.Logs
@{
    ViewBag.Title = "Логи";
    Layout = "~/Views/Shared/Layouts/MainLayout.cshtml";
}

<div>Логи за @Model.Date.ToString() (UTC)</div>

@if(!Model.Messages.Any())
{
    @("Отсутствуют сообщения")
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th width="150px">@LogsIndexUIResources.LogType_ColumnTitle</th>
                <th width="200px">@LogsIndexUIResources.Date_ColumnTitle</th>
                <th>@LogsIndexUIResources.Message_ColumnTitle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var msg in Model.Messages)
            {
                <tr class="@Model.TypeToClassConverter(msg.Type)">
                    <td>@msg.Type</td>
                    <td>@msg.Date.ToString() (UTC)</td>
                    <td>@msg.Message</td>
                </tr>
            }
        </tbody>        
    </table>
}
    